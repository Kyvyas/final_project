<div class="sign-up col-md-6 col-md-offset-3 col-xs-12 container center well">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group form-input">
      <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
    </div>

    <div class="form-group form-input">
      <%= f.email_field :email, placeholder: "Email" %>
    </div>

    <div class="form-group form-input">
      <%= f.label :avatar %><br/>
      <%= f.file_field :avatar, class: "file-upload" %>
    </div>

    <div class="form-group form-input">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)" %>
    </div>

    <div class="form-group form-input">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: 'submit-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
